<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_refreshview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<com.andview.refreshview.XScrollView-->
        <!--android:id="@+id/xscrollview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/JobTitleTextUnderlineStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/job_sheet_restore_charge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/JobTitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/job_sheet_job_vehicle_charge" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/JobTagTextStyle"
                        android:text="@string/job_sheet_job_rate_type" />

                    <TextView
                        android:id="@+id/job_rate_type"
                        style="@style/JobInfoTextStyle"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/JobTagTextStyle"
                        android:text="@string/job_sheet_job_rate" />

                    <TextView
                        android:id="@+id/rate"
                        style="@style/JobInfoTextStyle"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/JobTagTextStyle"
                        android:text="@string/job_sheet_job_call_out_fee" />

                    <TextView
                        android:id="@+id/call_out_fee"
                        style="@style/JobInfoTextStyle"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/JobTagTextStyle"
                        android:text="@string/return_fee" />

                    <TextView
                        android:id="@+id/return_fee"
                        style="@style/JobInfoTextStyle"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    style="@style/JobTitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/job_sheet_job_extra_charge" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/extra_charge_name0"
                        style="@style/JobTagTextStyle"
                        android:text="@string/job_sheet_job_upright_piano" />

                    <TextView
                        android:id="@+id/extra_charge_value0"
                        style="@style/JobInfoTextStyle"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/JobTitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/job_sheet_job_discount" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dicount_name"
                        style="@style/JobTagTextStyle"
                        android:text="@string/job_sheet_job_discount" />

                    <TextView
                        android:id="@+id/dicount_value"
                        style="@style/JobInfoTextStyle"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/JobTitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/job_sheet_job_fee" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/roster_action_name"
                        style="@style/JobTagTextStyle"
                        android:text="@string/job_sheet_job_discount" />

                    <TextView
                        android:id="@+id/roster_action_value"
                        style="@style/JobInfoTextStyle"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    <!--</com.andview.refreshview.XScrollView>-->
</ScrollView>
