<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/item_refreshview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <!--<com.andview.refreshview.XScrollView-->
    <!--android:id="@+id/xscrollview"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/JobTitleTextUnderlineStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/job_sheet_notes"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/general_text_clickable"
                style="@style/JobTitleTextStyle"
                android:text="@string/job_sheet_job_general_notes"/>

            <TextView
                android:id="@+id/general_notes"
                style="@style/JobAddressTextStyle"
                android:layout_marginRight="10dp"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/forman_text_clickable"
                style="@style/JobTitleTextWithImgStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/job_sheet_job_foreman_notes"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/forman_notes"
                style="@style/JobAddressTextStyle"
                android:layout_marginRight="10dp"
                android:text=""/>
            <!--Apartment 24\n1-3 Riverside Drive\nPort Melbourne VIC\n3002,Australia-->
        </LinearLayout>
    </LinearLayout>
    <!--</com.andview.refreshview.XScrollView>-->
</ScrollView>